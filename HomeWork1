#Задание 2
print('Программа выведет время в секундах в формате чч:мм:сс.')
time = int(input('Введите время в секундах:'))
hours = time // 3600
minutes = (time - hours * 3600) // 60
seconds = time - (hours * 3600 + minutes * 60)
#lltime = [hours, minutes, seconds]
#print(alltime)
print(f"Время в формате:   {hours} : {minutes} : {seconds}")


#Задание 3
print('Программа перемножит введенное число.')
n = int(input('Введи число:'))
result = (n + int(str(n) + str(n)) + int(str(n) + str(n)+ str(n)))
print('n + nn + nnn ,будет:', result)

#Задание 4
print('Программа найдет самую большую цифру в вашем числе.')
n = (int(input("Введите число: ")))
max = n % 10
while n >= 1:
    n = n // 10
    if n % 10 > max:
        max = n % 10
    if n > 9:
        continue
    else:
        print("Максимальное цифра в числе: ", max)
        break


#Задание 5
print('Программа найдет рентабельность выручки.')
proceeds = float(input('Введите выручку:'))
costs = float(input('Введите издержки:'))
profit = proceeds - costs              #Прибыль
if proceeds > costs:
    print('У вас прибыль.', 'Рентабельность выручки составляет:', profit / proceeds)
    workers = int(input('Введите кол-во работников:'))
    print('Прибыль на одного работника:', profit / workers)
else:
    print('У вас убыток.')

#Задание 6
print('Программа просчитает за сколько дней вы дастигните требуемого резудьтата в км.')
a = int(input('Сколько киллометров пробежали в 1 день?'))
b = int(input('Сколько киллометров хотите пробежать?'))
result_days = 1
result_km = a
while result_km < b:
    a = a * 0.1 + a
    result_days = result_days + 1
    result_km = result_km + a
print('Вы пробежите', result_km, 'за', result_days, 'дней')
print('Конец расчета.')