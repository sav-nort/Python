    print(x ** y)


my_func(float(input('Введите число: ')), int(input('Введите второе число: ')))


def my_func(a, b):
    print(a * b)


# Задание 5
print('Задание 5'
      'Введите числа через пробел')


def my_sum():
    sum_res = 0
    end = False
    while end == False:
        res = 0
        number = input('Введи число  или ex для выхода').split()
        for el in range(len(number)):
            if number[el] == 'ex':
                end = True
                break
            else:
                res = res + int(number[el])
        sum_res = sum_res + res
        print(f'Сумма ваших чисел равна: {sum_res}')


my_sum()


