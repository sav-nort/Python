from time import sleep


class TrafficLight:
    __color = ['Красный', 'Желтый', 'Зеленый', 'Светофор переключился']

    def running(self):
        i = 0
        while i < 4:
            print(f'Светофор переключается \n '
                  f'{TrafficLight.__color[i]}')
            if i == 0:
                sleep(7)
            elif i == 1:
                sleep(2)
            elif i == 2:
                sleep(3)
            elif i == 4:
                print('Светофор переключился')
            i += 1


done = TrafficLight()
done.running()

#Задание2

class Road:
    def __init__(self, _length, _width):
        self._length = _length
        self._width = _width

    def mass(self):
        return self._length * self._width


class Count(Road):
    def __init__(self, _length, _width, volume):
        super().__init__(_length, _width)
        self.volume = volume


r = Count(25, 10000, 125)
print(f'Масса асфальта: {r.mass()}')

#Задание3


class Worker:

    def __init__(self, name, surname, position, wage, bonus):
        self.name = name
        self.surname = surname
        self.position = position
        self._income = {"wage": wage, "bonus": bonus}


class Position(Worker):

    def __init__(self, name, surname, position, wage, bonus):
        super().__init__(name, surname, position, wage, bonus)

    def get_full_name(self):
        return self.name + ' ' + self.surname

    def get_total_income(self):
        return self._income.get('wage') + self._income.get('bonus')


a = Position('Костя', 'Савчук', 'Повар', 100000, 25000)
print(a.get_full_name())
print(a.position)
print(f'Заработал: {a.get_total_income()}')

